{
  "name": "obsidian-synapse-plugin",
  "version": "0.2.0",
  "description": "AI-powered knowledge connection and insight discovery for Obsidian",
  "main": "main.js",
  "scripts": {
    "dev": "npm run css:build && node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && npm run css:build && node esbuild.config.mjs production",
    "version": "node version-bump.mjs && git add manifest.json versions.json",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src",
    "css:build": "postcss styles.css -o dist/styles.css",
    "css:watch": "postcss styles.css -o dist/styles.css --watch"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "ai",
    "knowledge-management",
    "semantic-search",
    "note-taking"
  ],
  "author": "Synapse Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "builtin-modules": "3.3.0",
    "esbuild": "0.17.3",
    "eslint": "8.18.0",
    "jest": "^27.4.5",
    "obsidian": "latest",
    "postcss": "^8.5.4",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.0",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "tslib": "2.4.0",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "compromise": "^14.10.0",
    "fuse.js": "^6.6.2",
    "similarity": "^1.2.1"
  }
}
